<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/dustyOrange</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/pinkishGrey</item>
    </style>

    <style name="LoginField">
        <item name="android:textColorHint">@color/purpleyGrey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PinkishGreyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/pinkishGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">@color/purpleyGrey</item>
        <item name="colorControlHighlight">@color/purpleyGrey</item>
        <item name="fontPath">@string/font_lato_bold</item>
    </style>

    <style name="OrangeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/dustyOrange</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">@color/dustyOrangeDark</item>
        <item name="colorControlHighlight">@color/dustyOrangeDark</item>
        <item name="fontPath">@string/font_lato_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
